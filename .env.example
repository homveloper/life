# LIFE Game Server Configuration Template
# Copy this file to .env and update with your actual values

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=localhost
LOG_LEVEL=info
ENVIRONMENT=development

# Redis Configuration (URL-based connection)
REDIS_URL=redis://localhost:6379/0

# Legacy Redis Configuration (deprecated, use REDIS_URL instead)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s

# Redis Streams Configuration (for Events)
REDIS_STREAMS_MAX_LEN=10000
REDIS_STREAMS_CONSUMER_GROUP=life-game-server

# Asynq Configuration (Task Queue)
ASYNQ_REDIS_ADDR=localhost:6379
ASYNQ_CONCURRENCY=10
ASYNQ_STRICT_PRIORITY=false

# Game Configuration
GAME_MAP_WIDTH=30
GAME_MAP_HEIGHT=20
GAME_MAX_ANIMALS_PER_PLAYER=6
GAME_ANIMAL_SPAWN_RATE=0.1

# Authentication (for future expansion)
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRATION=24h

# Monitoring and Observability
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization